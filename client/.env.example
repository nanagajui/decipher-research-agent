# Database URL for Prisma - point to local PostgreSQL
DATABASE_URL=postgresql://researchforge:yoursecurepassword@localhost:5432/researchforge_db

# Authentication settings
BETTER_AUTH_SECRET=your_secure_auth_secret_key
BETTER_AUTH_URL=http://localhost:3000

# API settings - point to locally running backend
BACKEND_API_URL=http://localhost:8001
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# R2 settings (only needed if using R2 storage)
R2_ENDPOINT=https://youraccount.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-public-bucket-url.com