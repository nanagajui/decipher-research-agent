# Database Configuration
POSTGRES_USER=researchforge
POSTGRES_PASSWORD=yoursecurepassword
POSTGRES_DB=researchforge_db
# Full database URL for local PostgreSQL
DATABASE_URL=postgresql://researchforge:yoursecurepassword@localhost:5432/researchforge_db

# Application URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Qdrant Configuration - use localhost when running backend locally but Qdrant in Docker
QDRANT_API_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key

# Storage Configuration
STORAGE_TYPE=local  # or 'r2'
STORAGE_BASE_PATH=./uploads

# Cloudflare R2 Configuration (if using R2)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key

# Debug Mode (set to false in production)
DEBUG=true

# API Keys (add your actual API keys here)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENAI_API_KEY=your_openai_api_key
LEMONFOX_API_KEY=your_lemonfox_api_key
